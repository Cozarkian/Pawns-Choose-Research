<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- Vanilla Furniture Expanded-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ResearchProjectDef[defName="MF_BasicFurniture" or defName="MF_RoyalFurniture" or defName="MF_ModernFurniture" or defName="MF_WasteDisposal"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
			<value>
				<craftTech>1</craftTech>
			</value>
		</match>
	</Operation>	
<!-- Vanilla Furniture Expanded - Power (by Veralin & Cozarkian) -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Power</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VFE_IndustrialGenerators" or defName="VFE_AdvancedBatteries" or defName="VFE_AdvancedPowerSources"
										or defName="VFE_NuclearPower" or defName="VFE_TidalPower"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<constructionTech>1</constructionTech>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VFE_GasExtraction"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
						<value>
							<miningTech>1</miningTech>
						</value>
				</li>
			</operations>
		</match>
	</Operation>	
<!-- Vanilla Furniture Expanded - Art (by Veralin & Cozarkian) -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Art</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VFE_Res_Obelisk" or defName="VFE_Res_Pottery" or defName="VFE_Res_WallCarvings"	or defName="VFE_Res_ArtfulDisplay" or defName="VFE_Res_Statues" or defName="VFE_Res_Monuments" or defName="VFE_Res_Wallpapers" or defName="VFE_Res_Holograms"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<artTech>1</artTech>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VFE_Res_Rugs"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
						<value>
							<artTech>1</artTech>
							<craftTech>1</craftTech>
						</value>
				</li>
			</operations>
		</match>
	</Operation>
<!-- Vanilla Furniture Expanded - Spacer Module (by Veralin) -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Spacer Module</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ResearchProjectDef[defName="SpacerFurniture" or defName="SpacerElectronics" or defName="MechaniteRestoration"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
			<value>
				<craftTech>1</craftTech>
			</value>
		</match>
	</Operation>
<!-- Vanilla Furniture Expanded - Security (by Veralin & Cozarkian)-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Security</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VFES_MetalAlloysBarricades" or defName="VFES_ConcealedDefenses" or defName="VFES_RepulsorTechnology"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<constructionTech>1</constructionTech>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VFES_SiegeEquipment" or defName="VFES_Artillery" or defName="VFES_SentryGuns" or defName="VFES_MissileBarrage" or defName="VFES_PulseChargedDefenses" or defName="VFES_Railgun" or defName="VFES_EMPCannon"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<rangedTech>1</rangedTech>
						<craftTech>1</craftTech>
					</value>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Weapons Expanded</li>
					</mods>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ResearchProjectDef[defName="VFES_TrenchWarfare"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
						<value>
							<rangedTech>1</rangedTech>
							<constructionTech>1</constructionTech>
							<miningTech>1</miningTech>
						</value>	
					</nomatch>
				</li>
			</operations>
		</match>
	</Operation>
