<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Vanilla Weapons Expanded -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VWE_Longbow" or defName="VWE_Crossbow" or defName="VWE_CompoundBow" or defName="VWE_Gunpowder" or defName="VWE_HeavyWeapons" or defName="VWE_Flamethrower" or defName="VWE_SpecializedFirearms" or defName="VWE_SpecializedFirearms" or defName="VWE_DesignatedMarksmanRifle" or defName="VWE_TacticalGrenades" or defName="VWE_LaserTargetingSystems"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<rangedTech>1</rangedTech>
					</value>
				</li>			
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VWE_TrenchWarfare"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<meleeTech>1</meleeTech>
						<miningTech>1</miningTech>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName="VWE_Tools"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
					<value>
						<craftTech>1</craftTech>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
<!-- Vanilla Weapons - Lasers -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Lasers</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ResearchProjectDef[defName="VWE_LaserWeapons" or defName="VWE_UltratechLaserWeapons"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
			<value>
				<rangedTech>1</rangedTech>
			</value>
		</match>
	</Operation>
<!-- Vanilla Weapons Expanded - Quickdraw (by Veralin) -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Quickdraw</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ResearchProjectDef[defName="VWE_Quickdraw"]/modExtensions/li[@Class="PawnsChooseResearch.ResearchCategory"]</xpath>
			<value>
				<rangedTech>1</rangedTech>
			</value>
		</match>
	</Operation>
</Patch>